{
  "name": "pupil-registration-backend",
  "version": "1.0.0",
  "description": "Backend API for managing pupil registration data for a driving school",
  "main": "src/app.js",
  "scripts": {
   "start": "cross-env NODE_ENV=production node src/app.js",
    "start:dev": "NODE_ENV=development node src/app.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "echo 'Linting not configured yet'",
    "build": "echo 'No build step required for Node.js'",
    "health": "curl -f http://localhost:${PORT:-6006}/health || exit 1"
  },
  "keywords": [
    "express",
    "mongodb",
    "pupil",
    "registration",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ]
  }
}
