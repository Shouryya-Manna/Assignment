{
  "watch": [
    "src/**/*.js",
    ".env"
  ],
  "ignore": [
    "node_modules/**/*",
    "tests/**/*",
    "*.test.js",
    "coverage/**/*",
    "logs/**/*"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
}